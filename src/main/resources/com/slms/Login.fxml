<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="25.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.slms.LoginController"
      prefWidth="500" prefHeight="500">

   <padding>
      <Insets top="60.0" right="40.0" bottom="60.0" left="40.0" />
   </padding>

   <children>
      <Label text="Sacramento Library Management System"
             style="-fx-font-size: 24px; -fx-font-weight: bold;" />

      <TextField fx:id="usernameField"
                 promptText="Username"
                 maxWidth="300"
                 style="-fx-font-size: 16px;"/>

      <PasswordField fx:id="passwordField"
                     promptText="Password"
                     maxWidth="300"
                     style="-fx-font-size: 16px;"/>

      <Button fx:id="primaryButton"
              text="Login"
              onAction="#switchToSecondary"
              style="-fx-background-color: #4CAF50;
                     -fx-text-fill: white;
                     -fx-font-size: 16px;
                     -fx-font-weight: bold;
                     -fx-padding: 12 24;"/>
      
      <Label fx:id="errorLabel"
       textFill="red"
       text="Invalid username or password"
       style="-fx-font-size: 14px;"
       visible="false"/>

   </children>
</VBox>
